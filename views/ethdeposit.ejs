<!doctype html>
<html>

<head>
	<title>Coins and Cryptocurrency Exchange</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
		<h3>Deposit Coins</h3>
		<a href="/ethdeposit" class="btn btn-default btn-sm">Ethereum</a>
	</div>



	<div class="row">
		<!--<div class="page-header text-center">-->
			<!---->
		<!--</div>-->
		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

					<p>
						<strong>username</strong>: <%= user.username %><br>
						<strong>coin amount</strong>: <%= user.coin %><br>
                        <!--<strong>imageURL</strong>: <%= imgUrl %><br>-->
						<strong>address</strong>:<br>
						<canvas id="QRCODE"></canvas><br>
						<!--<div id="urld" style="display:none"><%= imgUrl %></div><br>-->
				</p>
                    </p>

			</div>



		</div>
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

				<p>
				<form action="/ethdeout" method="post">
					Your Erhereum Address:
					<input type="text" name="address" value="">
					<br>
					Amount               :
					<input type="text" name="amount" value="">
					<br>
					<input type="submit" value="Submit">
				</form>
				</p>

			</div>
		</div>

	</div>



    <script>
//		alert("shishi")
		var ff= document.getElementById('urld')
		var myCanvas = document.getElementById('QRCODE');
		var ctx = myCanvas.getContext('2d');
		var img = new Image;
		img.onload = function(){
			ctx.drawImage(img,0,0); // Or at whatever offset you like
		};
		img.src = "<%= imgUrl %>";
    </script>
</div>

</body>

</html>

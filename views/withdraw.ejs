<!-- views/withdraw.ejs -->
<!doctype html>
<html>

<head>
	<title>Coins and Cryptocurrency Exchange</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Withdraw Coin</h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
		<a href="/profile" class="btn btn-default btn-sm">Profile</a>

	</div>

	<div class="row">

		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Your current balance:</h3>

				<p>
					<strong>id</strong>: <%= user.id %><br>
					<strong>username</strong>: <%= user.username %><br>
					<strong>coin</strong>: <%= user.coin %><br>
					<strong>Msg</strong>: <%= msg %>

				</p>
				<p>
				<form action="/ethwithdraw" method="post">
					To Ethereum Address:
					<input type="text" name="ethAddress" value="">
					<br>
					Withdraw coin amount:
					<input type="text" name="ethAmount" value="">
					<br>
					<input type="submit" value="Submit">
				</form>
				</p>
				<p>
				<form action="/bchwithdraw" method="post">
					To Bitcoin Cash Address:
					<input type="text" name="bchAddress" value="">
					<br>
					Withdraw coin amount:
					<input type="text" name="bchAmount" value="">
					<br>
					<input type="submit" value="Submit">
				</form>
				</p>

			</div>
		</div>

	</div>

</div>

</body>

</html>
